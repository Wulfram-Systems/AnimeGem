<div id="section-cta">
    <div class="section-header text-center">
        <h3> {{section.settings.text-box}}</h3>
    </div>
    <div class="btn-container">
        {% for blocks in section.blocks %}
        {%- assign collection = collections[blocks.settings.collection] -%}
            <a href="{%if blocks.settings.collection != blank %}{{ collection.url }}{% else %}{{blocks.settings.url}}{% endif %}" class="btn btn-cta">
                {%if blocks.settings.title != blank %}
                    {{blocks.settings.title}}
                {% else %}
                    {{blocks.settings.collection}}
                {% endif %}
            </a>
        {% endfor %}
    </div>
</div>

